<%= simple_form_for(@record) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :ordernumber %>
    <%= f.input :date %>
    <%= f.input :begin_time %>
    <%= f.input :end_time %>
    <%= f.input :user_id %>
    <%= f.association :workfile %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
