<p id="notice"><%= notice %></p>

<h1>Workfiles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workfiles.each do |workfile| %>
      <tr>
        <td><%= workfile.title %></td>
        <td><%= workfile.description %></td>
        <td><%= workfile.date %></td>
        <td><%= workfile.user_id %></td>
        <td><%= link_to 'Show', workfile %></td>
        <td><%= link_to 'Edit', edit_workfile_path(workfile) %></td>
        <td><%= link_to 'Destroy', workfile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Workfile', new_workfile_path %>
